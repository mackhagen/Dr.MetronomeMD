					} catch (InterruptedException e) {
						// TODO Auto-generated catch block
						e.printStackTrace();
					}
				}
	    	}
		});
		sThread.start();
	}
	
	public void stopMet() { 
	}
	*/
	
	public void play() {
		playSound(SOUND_BEEP);
	}
	
	public void set_bpm(int b) {
		bpm = b;
	}
	
	public void set_tsig(int t){
		if (t < 0 || t > 12) {
			t_sig = 4;
		}
		else {
			t_sig = t;
		}
	}
	
	public void toggle_whole() {
		if (whole == false) {
			whole = true;
		}
		else {
			whole = false;
		}
	}
	
	public void toggle_eighth() {
		if (eighth == false) {
			eighth = true;
		}
		else {
			eighth = false;
		}
	}
	
	public void toggle_sixteenth() {
		if (sixteenth == false) {
			sixteenth = true;
		}
		else {
			sixteenth = false;
		}
	}
	
	public void toggle_triplet() {
		if (triplet == false) {
			triplet = true;
		}
		else {
			triplet = false;
		}
	}
	
	public int get_bpm() {
		return bpm;
	}
}
